@model IEnumerable<company>

<h2>Таблица компаний</h2>

<table id="companyTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>ФИО Директора</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.company_code</td>
                <td>@company.company_name</td>
                <td>@company.company_address</td>
                <td>@company.company_phone_number</td>
                <td>@company.director_full_name</td>
                <td>
                    <form asp-action="DeleteCompany" asp-controller="Home" method="post">
                        <input type="hidden" name="id" value="@company.company_code" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        <p class="italic-text">*Если хотите изменить существующую запись введите ID в поле для ID. Если хотите добавить новую компанию, оставьте поле пустым.</p>
        <div class="row">
        <div class="col font-weight-bold">ID</div>
        <div class="col font-weight-bold">Название</div>
        <div class="col font-weight-bold">Адрес</div>
        <div class="col font-weight-bold">Телефон</div>
        <div class="col font-weight-bold">ФИО Директора</div>
        <div class="col"></div>
        </div>
        <form asp-action="AddCompany" asp-controller="Home" method="post">
        <div class="row">
            <div class="col">
                <input name="company_code" class="form-control"/>
            </div>
            <div class="col">
                <input name="company_name" class="form-control" required />
            </div>
            <div class="col">
                <input name="company_address" class="form-control" required />
            </div>
            <div class="col">
                <input name="company_phone_number" class="form-control" required />
            </div>
            <div class="col">
                <input name="director_full_name" class="form-control" required />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
        </form>
    </tbody>
</table>