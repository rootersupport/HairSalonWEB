@model IEnumerable<client>

<h2>Таблица клиентов</h2>

<table id="clientTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Пол</th>
            <th>Телефон</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.client_code</td>
                <td>@client.client_name</td>
                <td>@client.client_surname</td>
                <td>@client.client_patronymic</td>
                <td>@client.client_gender</td>
                <td>@client.client_phone_number</td>
                <td>@client.client_login</td>
                <td>@client.client_password</td>
                <td>
                    <form asp-action="DeleteClient" asp-controller="Home" method="post">
                        <input type="hidden" name="id" value="@client.client_code" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
        <p class="italic-text">*Если хотите изменить существующую запись введите ID в поле для ID. Если хотите добавить нового клиента, оставьте поле пустым.</p>
        <div class="row">
        <div class="col font-weight-bold">ID</div>
        <div class="col font-weight-bold">Имя</div>
        <div class="col font-weight-bold">Фамилия</div>
        <div class="col font-weight-bold">Отчество</div>
        <div class="col font-weight-bold">Пол</div>
        <div class="col font-weight-bold">Номер</div>
        <div class="col font-weight-bold">Логин</div>
        <div class="col font-weight-bold">Пароль</div>
        <div class="col"></div>
        </div>
        <form asp-action="AddClient" asp-controller="Home" method="post">
        <div class="row">
             <div class="col">
                <input name="client_code" class="form-control"/>
            </div>
            <div class="col">
                <input name="client_name" class="form-control" required />
            </div>
            <div class="col">
                <input name="client_surname" class="form-control" required />
            </div>
            <div class="col">
                <input name="client_patronymic" class="form-control" required />
            </div>
            <div class="col">
                <input name="client_gender" class="form-control" required />
            </div>
            <div class="col">
                <input name="client_phone_number" class="form-control" required />
            </div>      
            <div class="col">
                <input name="client_login" class="form-control" required />
            </div>
            <div class="col">
                <input name="client_password" class="form-control" required />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
        </form>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </tbody>
</table>
